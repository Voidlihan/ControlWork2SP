<Window x:Class="ControlWork2SP.WithdrawWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlWork2SP"
        mc:Ignorable="d"
        Title="WithdrawWindow" Height="450" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="165*"/>
            <RowDefinition Height="151*"/>
            <RowDefinition Height="103*"/>
        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Left" Margin="35,108,0,0" TextWrapping="Wrap" Text="Укажите номер телефона и сумму" VerticalAlignment="Top" Height="57" Width="312" FontSize="20" Padding="80 0 0 0"/>
        <StackPanel x:Name="stackPanelAddToSum" HorizontalAlignment="Left" Height="151" Grid.Row="1" VerticalAlignment="Top" Width="392">
            <TextBox x:Name="textBoxWithdrawPhonenumberInput" Height="35" TextWrapping="Wrap" FontSize="16" Margin="36,0,48,0"/>
            <TextBox x:Name="textBoxWithdrawInput" Height="35" TextWrapping="Wrap" Margin="36,0,48,0" FontSize="16"/>
            <Button Content="Выполнить" Margin="36,0,48,0" Height="35" Background="#FF3C51DA" Foreground="White" FontSize="20" Click="WithdrawInputButton"/>
        </StackPanel>

    </Grid>
</Window>
